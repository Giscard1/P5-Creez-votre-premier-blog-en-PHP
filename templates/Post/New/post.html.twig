{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2 class="titres">Nouveau article</h2>
    <form method="POST">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-2">
                        <label for="title" class="libelle">Title</label>
                    </div>
                    <div class="col-10">
                            <input type="text" name="title" class="form-control" value="{{ article ? article.title : '' }}" />
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-2">
                        <label for="chapo" class="libelle">Chapo</label>
                    </div>
                    <div class="col-10">
                        <input type="text" name="chapo" class="form-control" value="{{ article ? article.chapo : '' }}" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="rowLabelContenue">
            <div class="col-md-5 offset-md-5">
                <label for="chapo" class="libelle">Contenu</label>
            </div>
        </div>
        <div class="row">
            <div class="col" id="input">
                <textarea class="form-control" name="content" id="content" placeholder="Lorem Ipsum is simply dummy text of the...">
                    {{ article ? article.content : '' }}
                </textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 offset-md-5">
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>
        </div>
    </form>
</div>

{% endblock %}
