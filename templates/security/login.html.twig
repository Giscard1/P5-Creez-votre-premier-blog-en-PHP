{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    <h2 class="titres">Je me connecte</h2>

    {% if errors|length > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <form method="post">
        <div class="form-group">
            <div class="row">
                <div class="col-2 libelle">
                    <label for="email">Email</label>
                </div>
                <div class="col-10">
                    <input name="email" type="email" class="form-control" id="emai1" aria-describedby="emailHelp" placeholder="tom@gmail.com">
                    <small id="emailHelp" class="form-text text-muted">je ne partagerais pas vos donn√©es.</small>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-2 libelleMotDePasse">
                    <label for="password">Mot de passe</label>
                </div>
                <div class="col">
                    <input name="password" type="password" class="form-control" id="password" placeholder="xxxyyy">
                </div>
            </div>
        </div>
        <div class="offset-5">
            <button type="submit" class="btn btn-primary" id="boutonInscription">Me connecter</button>
        </div>
        {#<div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        #}
    </form>
    </div>

{% endblock %}
